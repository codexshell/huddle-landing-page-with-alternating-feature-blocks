---
import logo from "../assets/logo.svg";
import Contacts from "./Contacts.astro";
import SocialIcons from "./SocialIcons.astro";

const date = new Date().getFullYear();
---

<footer class="pt-48 sm:pt-52 px-6 sm:px-12 lg:px-36 pb-10 sm:pb-14 bg-brand-cyan-2 text-white xl:flex xl:gap-8 xl:px-28">
  <div class="xl:w-1/3">
    <div class="max-w-[160px] sm:max-w-[200px]">
      <img class="contrast-0" src={logo} alt="" />
    </div>
    <div class="mt-8 sm:mt-16">
      <Contacts />
    </div>
  </div>

  <div class="flex flex-col gap-4 mt-12 sm:mt-16 xl:grow xl:m-0 xl:self-center">
    <span>About Us</span>
    <span>What We Do</span>
    <span>FAQ</span>
  </div>

  <div class="flex flex-col gap-4 mt-4 sm:mt-8 xl:grow xl:m-0 xl:self-center">
    <span>Career</span>
    <span>Blog</span>
    <span>Contact Us</span>
  </div>

  <div class="mt-16 flex flex-col justify-center items-center xl:w-/3 xl:justify-between xl:items-start xl:mt-24">
    <SocialIcons />
    <p class="text-xs mt-6">&copy; Copyright {date} Huddle. All rights reserved.</p>
  </div>
</footer>
