---
const { title, description, img } = Astro.props;
const formattedDesc = description.join(" ");
---

<div class="shadow-lg rounded-2xl text-center px-8 sm:px-12 md:px-20 pt-16 sm:pt-20 pb-10 sm:pb-14 md:pb-16 lg:pb-20">
  <div>
    <img src={img} alt="" />
  </div>
  <div>
    <h2 class="font-headings text-xl mt-12">{title}</h2>
    <p class="text-sm text-brand-blue mt-4">{formattedDesc}</p>
  </div>
</div>
